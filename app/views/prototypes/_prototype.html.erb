<div class="card">
  <%# if user_signed_in? %>
   <%= link_to image_tag(prototype.image, class: :card__img ), prototype_path(prototype) %>
   <div class="card__body">
    <%= link_to prototype.title, prototype_path(prototype),  class: :card__title %>
    <p class="card__summary">
      <%= link_to prototype.catch_copy, prototype_path(prototype), class: :catch_copy %>
    </p>
     <%= link_to "by #{prototype.user.name}", user_path(prototype), class: :card__user %>
  <%# else %>
      <%#= link_to current_user, edit_prototype_path(prototype) %>
  </div>
  <%# end %>
</div>